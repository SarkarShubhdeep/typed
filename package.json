{
    "name": "typed",
    "version": "0.1.0",
    "private": true,
    "main": "electron/main.js",
    "scripts": {
        "dev": "next dev --turbopack",
        "build": "next build --turbopack",
        "build:electron": "tsc -p electron/tsconfig.json",
        "electron:dev": "npm run build:electron && electron .",
        "electron:build": "npm run build && npm run build:electron && electron-builder",
        "dev:electron": "npm run build:electron && concurrently \"next dev --turbopack\" \"wait-on http://localhost:3000 && electron .\"",
        "start": "next start",
        "lint": "eslint"
    },
    "dependencies": {
        "@base-ui-components/react": "^1.0.0-beta.4",
        "@radix-ui/react-dropdown-menu": "^2.1.16",
        "@radix-ui/react-slot": "^1.2.3",
        "better-sqlite3": "^12.4.1",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "electron-is-dev": "^3.0.1",
        "lucide-react": "^0.545.0",
        "motion": "^12.23.24",
        "next": "15.5.5",
        "next-themes": "^0.4.6",
        "radix-ui": "^1.4.3",
        "react": "19.1.0",
        "react-dom": "19.1.0",
        "tailwind-merge": "^3.3.1"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3",
        "@tailwindcss/postcss": "^4",
        "@types/better-sqlite3": "^7.6.13",
        "@types/node": "^20",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "concurrently": "^9.1.2",
        "electron": "^38.2.2",
        "electron-builder": "^26.0.12",
        "electron-rebuild": "^3.2.9",
        "eslint": "^9",
        "eslint-config-next": "15.5.5",
        "tailwindcss": "^4",
        "tw-animate-css": "^1.4.0",
        "typescript": "^5",
        "wait-on": "^8.0.1"
    }
}
